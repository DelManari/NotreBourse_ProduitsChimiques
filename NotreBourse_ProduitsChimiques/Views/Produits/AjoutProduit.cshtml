@model NotreBourse_ProduitsChimiques.Models.Produit

@{
    Layout = null;
    if (Session["UserID"] == null)
    {
        Response.Redirect("~/Accueil/Index");
    }
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/AjoutProduit.css" type="text/css">
</head>

<body>
    <nav class="navbar navbar-expand-md navbar-light">
        <div class="container">
            <button class="navbar-toggler navbar-toggler-right border-0" type="button" data-toggle="collapse" data-target="#navbar6">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbar6">
                <a class="navbar-brand text-primary d-none d-md-block" href="#">
                    <i class="fa d-inline fa-lg fa-circle"></i>
                    <b> Bourse des Produits Chimiques</b>
                </a>
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item"> <a class="nav-link" href="@Url.Action("Index","Annonces")">Annonces</a> </li>
                    <li class="nav-item"> <a class="nav-link" href="@Url.Action("Index","Produits")">Produits</a> </li>
                    <li class="nav-item"> <a class="nav-link" href="@Url.Action("Index","magasins")">Magasins</a> </li>
                    <li class="nav-item"> <a class="nav-link" href="@Url.Action("Index","Messages")">Messages<br></a> </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item"> <a class="nav-link" href="@Url.Action("LogOut","Accueil")"><i class="fa fa-fw fa-sign-out"></i>Déconnecter</a> </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="py-5" style="	background-attachment: fixed;">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-right">
                    <h1 class="display-4 text-center" contenteditable="true">Ajout d'un Produit</h1>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="container">
                        <div class="row mt-5">
                            <div class="col-md-12">
                                @using (Html.BeginForm("AddOrEdit", "Produits", FormMethod.Post, new { htmlAttributes = new { @class = "text-center", @id = "c_form-h" } }))
                                {
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.Label, new { htmlAttributes = new { @class = "col-2 col-form-label" } })
                                        <div class="col-10">
                                            @Html.EditorFor(model => model.Label, new { htmlAttributes = new { @class = "form-control", @id = "inputmailh" } })
                                            @Html.ValidationMessageFor(model => model.Label)
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.CAS, new { htmlAttributes = new { @class = "col-2 col-form-label" } })

                                        <div class="col-10">
                                            @Html.EditorFor(model => model.CAS, new { htmlAttributes = new { @class = "form-control", @id = "inputmailh" } })
                                            @Html.ValidationMessageFor(model => model.CAS)

                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.Unite, new { htmlAttributes = new { @class = "col-2 col-form-label" } })
                                        <div class="col-10">
                                            @Html.EditorFor(model => model.Unite, new { htmlAttributes = new { @class = "form-control", @id = "inputmailh" } })
                                            @Html.ValidationMessageFor(model => model.Unite)

                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.Etat, new { htmlAttributes = new { @class = "col-2 col-form-label" } })
                                        <div class="col-10">
                                            @Html.EditorFor(model => model.Etat, new { htmlAttributes = new { @class = "form-control", @id = "inputmailh" } })
                                            @Html.ValidationMessageFor(model => model.Etat)

                                        </div>
                                    </div>
                                    <input type="submit" value="Ajouter" class="btn btn-primary mt-2">
                                    <div class="col-10">
                                        <label class="text-success">@ViewBag.SuccessMessage</label>
                                    </div>

                                    <div class="col-10">
                                        <label class="text-danger">@ViewBag.DuplicateMessage</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="py-3">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-6 p-3" style="	background-image: url(../../Desktop/sec_chimie.jpg);	background-position: top left;	background-size: 100%;	background-repeat: repeat;"></div>
                <div class="col-lg-4 col-6 p-3">
                    <h5>Contact</h5>
                    <p>Département Chimique<br>La Faculté des Sciences de Monastir</p>
                    <p>+216 -- --- ---</p>
                    <p>+216 -- --- ---</p>
                    <p>+216 -- --- ---</p>
                    <p class="mb-0">azerty@azerty.com</p>
                    <p class="mb-0">qwerty@qwerty.com</p>
                </div>
                <div class="col-md-4 p-3">
                    <h5>A propos</h5>
                    <p class="mb-0"> Cette platform vous permettre si vous êtes un vrai utilisateur de connecter pour gérer des offres ou des demandes des produits chimiques avant leur date d'expiration et de bien négocier avec vos collegues dans differentes Laboratoires chimiques dans La Faculté des Sciendes de Monastir pour affecter certains offres ou demandes.</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center">
                    <p class="mb-0 mt-2">© 15-02-2019 GeeksDev.&nbsp;Tous les droits sont réservés</p>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>

</html>